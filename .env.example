# Copy this file to `.env` and fill in the values you need.

# Base URL for API routes exposed by Flask. Change only if proxying.
API_BASE_URL=/api

# Default provider visible in the UI select element.
DEFAULT_PROVIDER=openrouter

# Configure OpenRouter access. The key is optional if you prefer to supply it
# from the browser each request.
OPENROUTER_API_KEY=sk-or-your-key
OPENROUTER_API_BASE=https://openrouter.ai/api/v1
OPENROUTER_DEFAULT_MODEL=openrouter/openai/gpt-4o-mini

# Optional: add default models for other OpenRouter-backed providers.
GEMINI_DEFAULT_MODEL=google/gemini-pro-1.5
CLAUDE_DEFAULT_MODEL=anthropic/claude-3.5-sonnet
QWEN_DEFAULT_MODEL=qwen/qwen2.5-7b-instruct

# Local model support via Ollama. Set ALLOW_OLLAMA=false to hide the option.
ALLOW_OLLAMA=true
OLLAMA_API_BASE=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3
